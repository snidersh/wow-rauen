<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 

	<Script file="miUI.lua"/>
	
	<!-- Templates -->
	<CheckButton name="miUI_CheckTemplate" inherits="UICheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="0" right="-100" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnClick>
				miUI_CheckButtonOnClick();
			</OnClick>
			<OnEnter>
				if ( this.tooltipText ) then
					GameTooltip:SetOwner(this, "ANCHOR_LEFT");
					GameTooltip:SetBackdropColor(0.0, 0.0, 0.5);
					GameTooltip:SetText(this.tooltipText, 1.0, 1.0, 1.0);
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>
	<Frame name="miUI_BoxTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="9" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Scripts>
			<OnLoad>
				this:SetBackdropBorderColor(0.4, 0.4, 0.4);
				this:SetBackdropColor(0.2, 0.2, 0.2);
			</OnLoad>
		</Scripts>
	</Frame>
	<!-- Templates -->
	
	<Frame name="miUI" toplevel="true" frameStrata="LOW" movable="false" enableMouse="true" hidden="true" parent="UIParent">
		<Size>
			<AbsDimension x="400" y="400" />
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\Addons\Rauen_ConfigMenu\Skin\Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
			tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />	
				<Size>
					<AbsDimension x="128" y="17" />
				</Size>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="miUI_Title" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="330" y="64" />
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="miUI_TitleText" inherits="GameFontNormal" text="Rauen's MapInfo">
					<Anchors>
						<Anchor point="TOP" relativeTo="miUI">
							<Offset>
								<AbsDimension x="0" y="-3" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		

		<Frames>
			
			<CheckButton name="miUI_CheckEnable" inherits="miUI_CheckTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="miUI" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
			</CheckButton>

			<Frame name="miUI_ConfigBox" inherits="miUI_BoxTemplate">
				<Size>
					<AbsDimension x="360" y="90"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="miUI_CheckEnable" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="10" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Frames>
					<CheckButton name="miUI_CheckShowCursor" inherits="miUI_CheckTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="miUI_ConfigBox" relativePoint="TOPLEFT">
								<Offset>
									<AbsDimension x="10" y="-10" />
								</Offset>
							</Anchor>
						</Anchors>
					</CheckButton>
					<CheckButton name="miUI_CheckShowPlayer" inherits="miUI_CheckTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="miUI_CheckShowCursor" relativePoint="BOTTOMLEFT">
								<Offset>
									<AbsDimension x="0" y="-5" />
								</Offset>
							</Anchor>
						</Anchors>
					</CheckButton>
				</Frames>
			</Frame>
			
			 <Button name="miUI_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="miUI">>
						<Offset>
							<AbsDimension x="-5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if ( ColorPickerFrame:IsVisible() ) then
							ColorPickerFrame:Hide();
						end
						miUI_Close();
					</OnClick>
				</Scripts>
			</Button>
			
			<Button name="miUI_SaveButton" inherits="GameMenuButtonTemplate" text="Ok">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="miUI">
						<Offset>
							<AbsDimension x="-15" y="15"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if ( ColorPickerFrame:IsVisible() ) then
							ColorPickerFrame:Hide();
						end
						miUI_Close();
					</OnClick>
				</Scripts>
			</Button>
			
			<Button name="miUI_ResetButton" inherits="GameMenuButtonTemplate" text="Defaults">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="miUI">
						<Offset>
							<AbsDimension x="15" y="15"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						miUI_Reset();
					</OnClick>
				</Scripts>
			</Button>

		</Frames>
		<Scripts>
			<OnLoad>
				miUI_OnLoad();
			</OnLoad>
			<OnShow>
				miUI_OnShow();
			</OnShow>
		</Scripts>
	</Frame>
	
</Ui>
